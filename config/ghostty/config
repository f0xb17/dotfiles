# Font
font-family = TX-02
font-size = 14

# Window
theme = Gruvbox Dark Hard
maximize = true
cursor-style = block
adjust-cell-height = 35%
title = " "
window-padding-balance = true
window-padding-x = 10
window-padding-y = 0
window-save-state = always

# Keybinds
keybind = ctrl+s>r=reload_config
keybind = ctrl+s>x=close_surface

# Splits
keybind = ctrl+s>c=new_split:right
keybind = ctrl+s>x=new_split:down
keybind = ctrl+s>a=goto_split:left
keybind = ctrl+s>d=goto_split:right
keybind = ctrl+s>w=goto_split:top
keybind = ctrl+s>s=goto_split:down
keybind = ctrl+s>z=toggle_split_zoom
